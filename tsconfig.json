{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "target": "es2019",
        "strict": true,
        "sourceMap": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["es2019"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": false,
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ],
    "plugins": [
        {
            "transform": "@zerollup/ts-transform-paths",
        },
        { "transform": "@zerollup/ts-transform-paths", "afterDeclarations": true }
    ]
}
